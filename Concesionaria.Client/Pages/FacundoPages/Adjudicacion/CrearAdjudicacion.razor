@page "/api/adjudicacion/crear"
@using Concesionaria2024.Shared.DTO.FacundoDTO.Adjudicacion
@inject NavigationManager Navigation
@inject IHttpServicio HttpServicio

<div class="container d-flex justify-content-center align-items-start" style="min-height: 90vh; margin-top: 50px;">
    <div class="card border-0 shadow-lg" style="width: 100%; border-radius: 10px;">
        <div class="card-header bg-primary text-white text-center py-4" style="border-top-left-radius: 10px; border-top-right-radius: 10px;">
            <h3 class="mb-0" style="font-weight: 600;">Crear nueva Adjudicación</h3>
        </div>

        <div class="card-body">
            <EditForm Model="@adjudicacion" OnValidSubmit="CrearNuevaAdjudicacion">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label for="PatenteVehiculo" class="form-label">Patente del Vehículo</label>
                    <InputText id="PatenteVehiculo" class="form-control" @bind-Value="adjudicacion.PatenteVehiculo" />
                    <ValidationMessage For="@(() => adjudicacion.PatenteVehiculo)" />
                </div>

                <div class="mb-3">
                    <label for="PlanVendidoCodigo" class="form-label">Código del Vehículo</label>
                    <InputText id="PlanVendidoCodigo" class="form-control" @bind-Value="adjudicacion.PlanVendidoCodigo" />
                    <ValidationMessage For="@(() => adjudicacion.PlanVendidoCodigo)" />
                </div>

                <div class="mb-3">
                    <label for="Detalle" class="form-label">Detalle</label>
                    <InputText id="Detalle" class="form-control" @bind-Value="adjudicacion.Detalle" />
                    <ValidationMessage For="@(() => adjudicacion.Detalle)" />
                </div>

                <div class="mb-3 form-check">
                    <InputCheckbox id="AutoEntregado" class="form-check-input" @bind-Value="adjudicacion.AutoEntregado" />
                    <label class="form-check-label" for="AutoEntregado">¿Auto entregado?</label>
                    <ValidationMessage For="@(() => adjudicacion.AutoEntregado)" />
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-4">Crear Adjudicación</button>
                <button class="btn btn-outline-primary w-100 mt-3" @onclick="VolverAListaAdjudicaciones">Volver a la lista de Adjudicaciones</button>
            </EditForm>

            @if (!string.IsNullOrEmpty(mensaje))
            {
                <div class="alert alert-info mt-4">
                    @mensaje
                </div>
            }
        </div>
    </div>
</div>

@code {
    private POST_AdjudicacionDTO adjudicacion = new POST_AdjudicacionDTO();
    private string? mensaje;

    private async Task CrearNuevaAdjudicacion()
    {
        var resultado = await HttpServicio.Post<POST_AdjudicacionDTO>("api/adjudicacion", adjudicacion);

        if (resultado.Error)
        {
            mensaje = $"Error al crear adjudicación: {await resultado.ObtenerError()}";
        }
        else
        {
            mensaje = "Adjudicación creada con éxito.";
            Navigation.NavigateTo("/api/Adjudicacion"); 
        }
    }

    private void VolverAListaAdjudicaciones()
    {
    Navigation.NavigateTo("/api/Adjudicacion");
    }
}
