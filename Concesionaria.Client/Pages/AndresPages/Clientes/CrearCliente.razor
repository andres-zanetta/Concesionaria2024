@page "/api/Cliente/agregar"
@using Concesionaria2024.Shared.DTO.AndresDTO
@inject IHttpServicio http
@inject NavigationManager navigationManager

<div class="container d-flex justify-content-center align-items-start" style="min-height: 90vh; margin-top: 50px;">
    <div class="card border-0 shadow-lg" style="width: 500px; border-radius: 10px;">
        <!-- Encabezado con fondo sólido y texto blanco -->
        <div class="card-header bg-primary text-white text-center py-4" style="border-top-left-radius: 10px; border-top-right-radius: 10px;">
            <h3 class="mb-0" style="font-weight: 600;">Registrar Cliente</h3>
        </div>
        <div class="card-body p-4 bg-light">
            <EditForm Model="postCliente" OnValidSubmit="Grabar">
                <DataAnnotationsValidator />

                @* Campo Cliente *@
                <div class="form-group mb-4">
                    <label class="form-label fw-bold text-secondary">Fecha Inicio</label>
                    <InputDate class="form-control border-0 shadow-sm" style="border-radius: 8px;" @bind-Value="@postCliente.FechaInicio" />
                    <ValidationMessage For="@(() => postCliente.FechaInicio)" class="text-danger" />
                </div>

                <!-- Botón de Enviar -->
                <div class="text-center mt-4">
                    <button class="btn btn-primary btn-lg w-100 shadow" style="border-radius: 8px;">Aceptar</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>


    @code {
    private POST_ClienteDTO postCliente = new POST_ClienteDTO
    {
        FechaInicio=DateTime.Now//fecha de hoy cliente
    };

    private async Task Grabar()
    {
        var httpRespuesta = await http.Post<POST_ClienteDTO>("api/Vendedor", postCliente);

        navigationManager.NavigateTo("/api/Cliente/mostrar");
        
    }


}
