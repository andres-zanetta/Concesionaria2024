@page "/personas"
@inject NavigationManager navigationManager

<div class="container mt-5">
    <div class="card border-0 shadow-lg">
        <div class="card-header bg-primary text-white text-center py-4" style="border-top-left-radius: 10px; border-top-right-radius: 10px;">
            <h3 class="mb-0" style="font-weight: 600;">Gestión de Personas</h3>
        </div>

        <div class="card-body p-4 bg-light">
            <div class="row">
                <!-- Botón para ver clientes alineado a la izquierda -->
                <div class="col-md-4 mb-3">
                    <button class="btn btn-primary btn-lg w-100 shadow" style="border-radius: 0px;" @onclick="NavigateToVerClientes">
                        Ver Clientes
                    </button>
                </div>

                <!-- Botón para ver vendedores alineado al centro -->
                <div class="col-md-4 mb-3">
                    <button class="btn btn-warning btn-lg w-100 shadow" style="border-radius: 0px;" @onclick="NavigateToVerVendedores">
                        Ver Vendedores
                    </button>
                </div>

                <!-- Botón para agregar persona alineado a la derecha -->
                <div class="col-md-4 mb-3">
                    <button class="btn btn-success btn-lg w-100 shadow" style="border-radius: 0px;" @onclick="NavigateToAgregarPersona">
                        Agregar Persona
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToVerClientes()
    {
        navigationManager.NavigateTo("/api/Clientes/Ver");
    }

    private void NavigateToVerVendedores()
    {
        navigationManager.NavigateTo("/api/Vendedores/Ver");
    }

    private void NavigateToAgregarPersona()
    {
        // Navegar a la página de agregar persona (reemplaza "/agregarPersona" con la URL correcta)
        navigationManager.NavigateTo("/agregarPersona");
    }
}
