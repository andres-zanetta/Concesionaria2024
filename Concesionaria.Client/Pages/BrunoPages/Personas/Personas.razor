@page "/personas"
@inject NavigationManager navigationManager

<div class="container mt-5">
    <div class="card border-0 shadow-lg rounded-3">
        <div class="card-header bg-primary text-white text-center py-4" style="border-top-left-radius: 10px; border-top-right-radius: 10px;">
            <h3 class="mb-0" style="font-weight: 600;">Gestión de Personas</h3>
        </div>

        <div class="card-body p-4 bg-light">
            <div class="row text-center">
                <!-- Botón para ver clientes -->
                <div class="col-md-4 mb-3">
                    <button class="btn btn-outline-primary btn-lg w-100 shadow-sm" style="border-radius: 12px; padding: 15px; font-size: 18px; font-weight: 600; border-width: 2px;" @onclick="NavigateToVerClientes">
                        <i class="fas fa-users me-2"></i>Ver Clientes
                    </button>
                </div>

                <!-- Botón para ver vendedores con color azul y bordes más gruesos -->
                <div class="col-md-4 mb-3">
                    <button class="btn btn-outline-primary btn-lg w-100 shadow-sm" style="border-radius: 12px; padding: 15px; font-size: 18px; font-weight: 600; border-width: 2px;" @onclick="NavigateToVerVendedores">
                        <i class="fas fa-user-tie me-2"></i>Ver Vendedores
                    </button>
                </div>

                <!-- Botón para agregar persona con color azul y bordes más gruesos -->
                <div class="col-md-4 mb-3">
                    <button class="btn btn-outline-primary btn-lg w-100 shadow-sm" style="border-radius: 12px; padding: 15px; font-size: 18px; font-weight: 600; border-width: 2px;" @onclick="NavigateToAgregarPersona">
                        <i class="fas fa-plus-circle me-2"></i>Agregar Persona
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToVerClientes()
    {
        navigationManager.NavigateTo("/api/Clientes/Ver");
    }

    private void NavigateToVerVendedores()
    {
        navigationManager.NavigateTo("/api/Vendedores/Ver");
    }

    private void NavigateToAgregarPersona()
    {
        navigationManager.NavigateTo("/api/Persona/Agregar");
    }
}

