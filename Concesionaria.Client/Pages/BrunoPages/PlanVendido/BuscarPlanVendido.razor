@page "/api/PlanVendido/buscar"
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Buscar Plan Vendido</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <!-- Contenedor principal -->
    <div class="container">
        <!-- Cuadro de búsqueda DNI -->
        <div class="search-box">
            <form id="searchForm">
                <div class="form-group">
                    <label for="dni">DNI del Cliente</label>
                    <input type="text" id="dni" class="form-control" placeholder="Ingrese el DNI" required>
                </div>
                <button type="submit" class="btn">Buscar</button>
            </form>
        </div>

        <!-- Card para mostrar detalles o resultados -->
        <div class="card">
            <div class="card-header">
                <h2>Buscar Plan Vendido</h2>
            </div>
            <div class="card-body">
                <p>Ingrese el DNI del cliente para buscar el plan vendido.</p>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('searchForm').addEventListener('submit', function (event) {
            event.preventDefault();
            const dni = document.getElementById('dni').value;
            alert("DNI ingresado: " + dni);
            // Aquí puedes agregar la lógica para hacer la llamada al servidor usando el DNI
        });
    </script>

</body>
</html>

